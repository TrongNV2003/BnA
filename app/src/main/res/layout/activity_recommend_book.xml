<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NavBottom.AccountFragmentInsider.RecommendBook"
    android:orientation="vertical">

    <Button
        android:id="@+id/back"
        style="@android:style/Widget.DeviceDefault.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:drawableLeft="@drawable/back"
        android:text="Recommend Your Book"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:textAlignment="textStart"
        app:iconPadding="15dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:text="Name of the book"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15mm"
        android:layout_marginTop="10dp"
        android:hint="Write the name of book"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:text="Category of the book"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15mm"
        android:layout_marginTop="10dp"
        android:hint="Write the category of book"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:text="Author of the book"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:textStyle="bold"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15mm"
        android:layout_marginTop="10dp"
        android:hint="Write the author of book"/>

    <ScrollView
        android:layout_width="390dp"
        android:layout_height="150dp"
        android:background="@drawable/scrollview"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Write your comment here"
            android:backgroundTint="@color/transparent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"/>
    </ScrollView>



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/send"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Send"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:backgroundTint="#101010"
        android:background="@drawable/send"
        android:layout_gravity="center"/>



</LinearLayout>