<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mainHome.BookDetails.BookDetails"
    android:orientation="vertical"
    android:background="#F9FFF7">

    <Button
        android:id="@+id/back"
        style="@android:style/Widget.DeviceDefault.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:drawableLeft="@drawable/back"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:iconPadding="15dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="180dp"
                    android:src="@drawable/tet_o_lang_dia_nguc"
                    android:layout_marginStart="10dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tết ở làng địa ngục"
                        android:textSize="36dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thảo Trang"
                        android:textSize="15dp"
                        android:layout_marginStart="10dp"/>
                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/borrowBtn"
                style="@style/Widget.Material3.MaterialTimePicker.Button"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="#CF8B66"
                android:text="Borrow this Book"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textAlignment="center"
                app:iconPadding="15dp"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"/>

            <Button
                android:id="@+id/about_book"
                style="@android:style/Widget.DeviceDefault.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="About this book"
                android:drawableRight="@drawable/arrow_right"
                android:paddingStart="25dp"
                android:paddingEnd="20dp"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:iconPadding="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="That year, in a remote village on a deserted mountain, people welcomed Tet in extreme fear, painful doubt and extreme anger before the coming of devastating tragedies."
                android:textColor="@color/black"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:textSize="15sp"/>

            <Button
                android:id="@+id/rating_book"
                style="@android:style/Widget.DeviceDefault.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Rating &amp; Reviews"
                android:drawableRight="@drawable/arrow_right"
                android:paddingStart="25dp"
                android:paddingEnd="20dp"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:iconPadding="15dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.6"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    android:layout_marginStart="60dp"
                    android:textColor="@color/black"/>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="10dp"
                        android:numStars="5"
                        android:rating="4"
                        android:stepSize="1"
                        android:progressTint="#0f9d58"
                        android:backgroundTint="#0f9d58"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="201"
                        android:layout_marginStart="30dp"/>
                </LinearLayout>


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_person"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="20dp"
                android:drawablePadding="10dp"
                android:text="frank mckins"
                android:textSize="15sp"
                android:textColor="@color/black"/>

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:numStars="5"
                android:rating="5"
                android:stepSize="1"
                android:progressTint="#0f9d58"
                android:backgroundTint="#0f9d58"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="That is a great Book in Viet Nam!!!. This is a meaningful book!!!"
                android:textColor="@color/black"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="5dp"
                android:textSize="15sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_person"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="20dp"
                android:drawablePadding="10dp"
                android:text="John"
                android:textSize="15sp"
                android:textColor="@color/black"/>

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:numStars="5"
                android:rating="5"
                android:stepSize="1"
                android:progressTint="#0f9d58"
                android:backgroundTint="#0f9d58"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Good book!"
                android:textColor="@color/black"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="5dp"/>

            <Button
                android:id="@+id/similar_book"
                style="@android:style/Widget.DeviceDefault.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Similar books"
                android:drawableRight="@drawable/arrow_right"
                android:paddingStart="25dp"
                android:paddingEnd="20dp"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:iconPadding="15dp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:scrollbars="none"
                android:layout_marginBottom="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="180dp"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="10dp"
                        android:id="@+id/book1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="150dp"
                                android:src="@drawable/tet_o_lang_dia_nguc"
                                android:layout_gravity="center"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tết ở làng địa ngục"
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                android:layout_gravity="center"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="180dp"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="150dp"
                                android:src="@drawable/tet_o_lang_dia_nguc"
                                android:layout_gravity="center"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tết ở làng địa ngục"
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                android:layout_gravity="center"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="180dp"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="150dp"
                                android:src="@drawable/tet_o_lang_dia_nguc"
                                android:layout_gravity="center"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tết ở làng địa ngục"
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                android:layout_gravity="center"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </HorizontalScrollView>


        </LinearLayout>
    </ScrollView>

    


</LinearLayout>