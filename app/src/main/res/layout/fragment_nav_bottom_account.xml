<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".NavBottom.AccountFragmentInsider.AccountFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="150dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/baseline_person_24"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nguyen Van Trong"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:orientation="vertical">



        <Button
            android:id="@+id/recommend_book"
            style="@style/Widget.Material3.MaterialTimePicker.Button"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/my_third"
            android:drawableLeft="@drawable/medical_services"
            android:drawableRight="@drawable/right_sign"
            android:text="Recommend Your Book"
            android:textColor="#555252"
            android:textSize="18sp"
            android:textStyle="normal"
            android:textAlignment="textStart"
            app:iconPadding="15dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"/>

        <Button
            android:id="@+id/borrow_detail"
            style="@style/Widget.Material3.MaterialTimePicker.Button"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/my_third"
            android:drawableLeft="@drawable/question_mark"
            android:drawableRight="@drawable/right_sign"
            android:text="Status Borrowed Book"
            android:textColor="#555252"
            android:textSize="18sp"
            android:textStyle="normal"
            android:textAlignment="textStart"
            app:iconPadding="15dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"/>

        <Button
            android:id="@+id/policy"
            style="@style/Widget.Material3.MaterialTimePicker.Button"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/my_third"
            android:drawableLeft="@drawable/policy"
            android:drawableRight="@drawable/right_sign"
            android:text="Policy"
            android:textColor="#555252"
            android:textSize="18sp"
            android:textStyle="normal"
            android:textAlignment="textStart"
            app:iconPadding="15dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"/>

        <Button
            android:id="@+id/about_us"
            style="@style/Widget.Material3.MaterialTimePicker.Button"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/my_third"
            android:drawableLeft="@drawable/info"
            android:drawableRight="@drawable/right_sign"
            android:text="About Us"
            android:textColor="#555252"
            android:textSize="18sp"
            android:textStyle="normal"
            android:textAlignment="textStart"
            app:iconPadding="15dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"/>

    </LinearLayout>

</LinearLayout>